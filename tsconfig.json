{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "es2015",
        "lib": [ "es2016" ],
        "moduleResolution": "node",
        "strictNullChecks": true,
        "declaration": true,
        "rootDir": ".",
        "outDir": "./dist",
        "typeRoots": [ "./node_modules/@types" ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}
